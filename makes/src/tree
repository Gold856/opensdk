#!/usr/bin/env bash

rm -rf tree-install
mkdir tree-install
for dir in {gcc,binutils,sysroot,gdb}-install; do
    echo "$dir/"
    rsync "$dir/" tree-install -a --copy-links
done
cd tree-install
du -hs .
if [ "$FRCTARGET" = "Windows" ]; then
    cd "${WPIPREFIX}"
    find bin -name \*.exe | xargs "$FRCHOSTTARGET"-strip
    find arm-frc*/bin -name \*.exe | xargs "$FRCHOSTTARGET"-strip
    find libexec -name \*.exe | xargs "$FRCHOSTTARGET"-strip
    rm -rf share/info share/man
    rm -rf lib/xtables
else
    strip usr/local/bin/*
    strip usr/local/arm-frc*/bin/*
    find usr/local/libexec -type f | xargs strip
fi
du -hs .
